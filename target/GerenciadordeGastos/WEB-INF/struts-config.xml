<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
    "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    
    <!-- Form Beans -->
    <form-beans>
        <form-bean name="transacaoForm" type="com.gerenciador.form.TransacaoForm"/>
    </form-beans>
    
    <!-- Action Mappings -->
    <action-mappings>
        <action path="/gerenciador"
                type="com.gerenciador.action.GerenciadorAction"
                name="transacaoForm"
                scope="request"
                validate="false">
            <forward name="success" path="/listar-transacoes.jsp"/>
        </action>
    </action-mappings>
    
</struts-config>